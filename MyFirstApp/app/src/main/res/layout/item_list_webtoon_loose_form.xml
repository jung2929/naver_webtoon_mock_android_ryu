<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageView

            android:id="@+id/webtoon_thumbnail"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/list_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/webtoon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/colorBlackfont"
                android:textSize="16sp"
                tools:text="comicName" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_star_point" />
                </FrameLayout>

                <TextView
                    android:id="@+id/webtoon_starpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorWebtoonStarPoint"
                    android:textSize="13sp"
                    tools:text="별점" />

                <TextView
                    android:id="@+id/webtoon_story_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlackfontexplain"
                    android:textSize="13sp"
                    tools:text="글" />

                <TextView
                    android:id="@+id/webtoon_painter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlackfontexplain"
                    android:textSize="13sp"
                    tools:text="/그림" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>