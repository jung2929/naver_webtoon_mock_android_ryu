<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="1dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/webtoon_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingRight="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail_not_loaded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorWebtoonBackground"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/webtoon_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorWebtoonName"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/webtoon_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_point"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/webtoon_starpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorWebtoonStarPoint"
                    android:textSize="10sp" />

            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/webtoon_story_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="글"
                android:textColor="@color/colorBlackfontexplain"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/webtoon_painter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="/그림"
                android:textColor="@color/colorBlackfontexplain"
                android:textSize="10sp" />
</LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>